{
  "name": "vip-command-center",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "analyze": "cross-env ANALYZE=true next build",
    "build:analyze": "npm run build && npm run analyze",
    "build:production": "NODE_ENV=production next build",
    "performance:audit": "lighthouse http://localhost:3001 --output=json --output-path=./performance/audit.json --chrome-flags=\"--headless\"",
    "performance:test": "npm run build && npm run start & npm run performance:audit",
    "bundle:analyze": "npm run build && npx @next/bundle-analyzer",
    "cache:clear": "rimraf .next",
    "prebuild": "npm run cache:clear"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "^14.2.15",
    "firebase": "^12.1.0",
    "react-swipeable": "^7.0.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.15",
    "@next/bundle-analyzer": "^14.2.15",
    "cross-env": "^7.0.3",
    "lighthouse": "^11.7.1",
    "webpack-bundle-analyzer": "^4.10.1",
    "sharp": "^0.33.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "performance": {
    "budgets": {
      "bundle": "800KB",
      "initial": "400KB",
      "assets": "1.5MB"
    }
  }
}
